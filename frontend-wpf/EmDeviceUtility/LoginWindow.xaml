<Window x:Class="EmDeviceUtility.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmDeviceUtility"
        mc:Ignorable="d"
        Title="Login" Height="263" Width="386" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="65,42,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="31" Margin="159,44,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="148" FontSize="14" VerticalContentAlignment="Center"/>

        <Label Content="Password:" HorizontalAlignment="Left" Margin="65,104,0,0" VerticalAlignment="Top" FontSize="16"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="159,104,0,0" VerticalAlignment="Top" Width="148" Height="31" FontSize="16" VerticalContentAlignment="Center"/>
        <Button x:Name="BtnLogin" Content="Login" HorizontalAlignment="Left" Margin="159,168,0,0" VerticalAlignment="Top" Width="148" Height="32" FontSize="14" Click="BtnLogin_Click"/>

    </Grid>
</Window>
